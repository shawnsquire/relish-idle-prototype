# Nginx configuration for Relish Idle Game
# Copy this to your nginx sites-available directory and modify as needed

server {
    listen 80;
    listen [::]:80;
    server_name your-domain.com www.your-domain.com;

    # Uncomment these lines and comment out the above 'listen' directives for SSL
    # listen 443 ssl http2;
    # listen [::]:443 ssl http2;
    # ssl_certificate /path/to/your/fullchain.pem;
    # ssl_certificate_key /path/to/your/privkey.pem;

    # Root directory where your built files are located
    # This should point to where you deploy the 'dist' folder contents
    root /var/www/relish-idle-game;
    index index.html;

    # Enable gzip compression for better performance
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json application/xml+rss;

    # Main location block - serve static files
    location / {
        try_files $uri $uri/ /index.html;

        # Security headers
        add_header X-Frame-Options "SAMEORIGIN" always;
        add_header X-Content-Type-Options "nosniff" always;
        add_header X-XSS-Protection "1; mode=block" always;
    }

    # Cache static assets (JS, CSS, images) for better performance
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Don't cache HTML files (allows game updates to be seen immediately)
    location ~* \.html$ {
        expires -1;
        add_header Cache-Control "no-store, no-cache, must-revalidate";
    }

    # Security: Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Optional: Access and error logs
    access_log /var/log/nginx/relish-idle-access.log;
    error_log /var/log/nginx/relish-idle-error.log;
}

